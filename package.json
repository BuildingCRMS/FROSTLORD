{
  "name": "frostlord",
  "version": "1.0.0",
  "description": "FROSTLORD - Medusa ecommerce platform with Next.js frontend",
  "private": true,
  "workspaces": [
    "backend",
    "storefront"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd storefront && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd storefront && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd storefront && npm run start",
    "install:all": "npm install && cd backend && npm install && cd ../storefront && npm install",
    "clean": "rimraf node_modules backend/node_modules storefront/node_modules",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd storefront && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
